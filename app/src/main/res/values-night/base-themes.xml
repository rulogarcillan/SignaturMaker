<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:tools="http://schemas.android.com/tools">
    <!--Top level DayNight theme to be used in AndroidManifest.xml-->
    <!--Material color attributes (dark theme) -->
    <style name="Base.Theme.DayNight" parent="Base.Theme">
        <item name="colorPrimary">@color/darkGreyPrimary</item>
        <item name="colorPrimaryVariant">@color/darkGreyPrimary</item>
        <item name="colorSecondary">@color/purpleSecondaryDark</item>
        <item name="colorSecondaryVariant">@color/purpleSecondaryDarkVariant</item>
        <item name="android:colorBackground">@color/darkGreyPrimary</item>
        <item name="colorSurface">@color/darkGreyPrimary</item>
        <item name="colorError">@color/red_600</item>
        <item name="colorOnPrimary">@color/grey</item>
        <item name="colorOnSecondary">@color/grey</item>
        <item name="colorOnBackground">@color/grey</item>
        <item name="colorOnSurface">@color/grey</item>
        <item name="colorOnError">@color/darkGreyPrimary</item>

        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">false</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">?attr/colorSurface</item>
    </style>
</resources>
