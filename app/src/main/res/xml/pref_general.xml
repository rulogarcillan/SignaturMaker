<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/title_pref_files">
        <Preference
            android:key="id_pref_path"
            android:title="@string/title_pref_path" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="id_pref_delete"
            android:summary="@string/title_pref_delete_sum"
            android:title="@string/title_pref_delete" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="id_pref_gallery"
            android:summary="@string/title_pref_gallery_sum"
            android:title="@string/title_pref_gallery" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="id_pref_name"
            android:summary="@string/title_pref_name_sum"
            android:title="@string/title_pref_name" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/title_pref_siganture">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="id_pref_color"
            android:summary="@string/title_pref_color_sum"
            android:title="@string/title_pref_color" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="id_pref_stroke"
            android:summary="@string/title_pref_stroke_sum"
            android:title="@string/title_pref_stroke" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/title_pref_advertising_t">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="id_pref_advertising"
            android:title="@string/title_pref_advertising" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/title_setting">
        <Preference
            android:key="id_pref_reset"
            android:summary="@string/title_pref_reset_sum"
            android:title="@string/title_pref_reset" />
    </PreferenceCategory>


</PreferenceScreen>